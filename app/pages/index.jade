include  /blocks/wrapper/wrapper
include  /blocks/header/header
include /blocks/section/section
include /blocks/footer/footer
include /blocks/about/about
include /blocks/courses/courses

extends /blocks/layout-default/layout-default

block head
	- var pageTitle = 'LoftSchool';

block content

	//получаем данные из json
	- var info = getData('info');
	- var courses = getData('courses');

	+header

	main
		+section('white', 'О будущем ученике', 'Ребятам из LoftSchool будет полезно узнать обо мне')
			.row
				+about('hello', info.hello.title, info.hello.text)
				+about('experience', info.experience.title, info.experience.text)

		+section('bg', 'Курсы на loftblog', 'которые помогут мне в выполнении этого задания')
			+courses(courses)

	+footer('А это футер с текстом внутри. Он должен быть прибит к низу окна браузера, не зависимо от количества контента на странице и размера окна')
