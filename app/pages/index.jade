include  /blocks/header/header
include /blocks/section/section
include /blocks/footer/footer
include /blocks/about/about
include /blocks/courses/courses

extends /blocks/layout-default/layout-default


block head
	- var pageTitle = 'dsfdfdfdfCSSSR Project Tedfmplate';

block content
	
	- var info = getData('info');
	- var courses = getData('courses');

	+header

	+section('white', 'О будущем ученике', 'Ребятам из LoftSchool будет полезно узнать обо мне')
